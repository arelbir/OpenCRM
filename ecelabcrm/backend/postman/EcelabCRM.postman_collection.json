			"name": "Excel Operations",
			"description": "Excel şablonu indirme ve ürün import işlemleri",
			"item": [
				{
					"name": "Download Product Template",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:3000/api/products/template",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3000",
							"path": ["api", "products", "template"]
						},
						"description": "Ürün import şablonunu indirir. CSV formatında bir şablon döner."
					}
				},
				{
					"name": "Import Products from Excel",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "file",
									"type": "file",
									"src": "./urunsablonu.csv",
									"description": "CSV/Excel dosyası"
								}
							]
						},
						"url": {
							"raw": "http://localhost:3000/api/products/import",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3000",
							"path": ["api", "products", "import"]
						},
						"description": "CSV/Excel dosyasından ürün import eder. Dosya formatı:\n- Brand: Marka (zorunlu)\n- Code: Ürün kodu (zorunlu)\n- Description: Açıklama\n- Price: Fiyat (zorunlu)\n- Stock: Stok miktarı\n- MinimumStock: Minimum stok seviyesi"
					}
				}
			]
